<resources>

  <style name="Widget"/>
  <style name="Widget.DebugDrawer"/>

  <style name="Widget.DebugDrawer.Header">
    <item name="android:paddingBottom">2dp</item>
    <item name="android:textColor">?android:attr/textColorSecondary</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:textSize">13sp</item>
    <item name="android:layout_marginTop">24dp</item>
    <item name="android:layout_marginBottom">2dp</item>
    <item name="android:background">@drawable/debug_drawer_header_bg</item>
  </style>

  <style name="Widget.DebugDrawer.RowWidget">
    <item name="android:minHeight">26dp</item>
    <item name="android:layout_marginTop">4dp</item>
  </style>
  <style name="Widget.DebugDrawer.RowTitle" parent="Widget.DebugDrawer.RowWidget">
    <item name="android:layout_marginRight">16dp</item>
    <item name="android:textColor">?android:attr/textColorSecondary</item>
    <item name="android:textSize">16sp</item>
  </style>
  <style name="Widget.DebugDrawer.RowValue" parent="Widget.DebugDrawer.RowWidget">
    <item name="android:textColor">?android:attr/textColorPrimary</item>
    <item name="android:textSize">16sp</item>
  </style>
</resources>
