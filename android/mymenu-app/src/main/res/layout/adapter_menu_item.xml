<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="48dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

  <ca.mymenuapp.ui.widgets.SquaredImageView
      android:id="@+id/menu_item_picture"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:scaleType="centerCrop"/>

  <TextView
      android:id="@+id/menu_item_label"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dip"
      android:layout_marginBottom="8dip"
      android:textAppearance="?android:attr/textAppearanceListItem"
      tools:text="Chicken Fajitas"
      />

  <TextView
      android:id="@+id/menu_item_description"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textAppearance="?android:attr/textAppearanceSmall"
      tools:text="Twist on the classic Chicken Fajitas. Served with salsa and sour cream."
      />

</LinearLayout>