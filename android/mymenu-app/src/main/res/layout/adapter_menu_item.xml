<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

  <ca.mymenuapp.ui.widgets.SquaredImageView
      tools:background="@drawable/gradient_overlay"
      android:id="@+id/menu_item_picture"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:scaleType="centerCrop"/>

  <TextView
      tools:text="Chocolate Explosion"
      android:id="@+id/menu_item_label"
      android:layout_width="match_parent"
      android:layout_height="48dp"
      android:layout_gravity="bottom"
      android:gravity="bottom"
      android:padding="6dp"
      android:singleLine="true"
      android:ellipsize="end"
      android:textColor="@color/white"
      android:background="@drawable/gradient_overlay"/>

  <ca.mymenuapp.ui.widgets.SquaredImageView
      android:id="@+id/menu_item_restriction_icon"
      android:layout_width="32dp"
      android:layout_height="32dp"
      android:padding="@dimen/holo_gap"
      android:layout_gravity="top|right"
      android:scaleType="centerCrop"
      android:src="@drawable/restriction_mymenu"/>

</FrameLayout>