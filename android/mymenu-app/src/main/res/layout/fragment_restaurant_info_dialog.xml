<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <LinearLayout
      android:layout_width="512dp"
      android:layout_height="512dp"
      android:paddingTop="@dimen/holo_gap"
      android:orientation="vertical"
      android:paddingLeft="@dimen/activity_horizontal_margin"
      android:paddingRight="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

      <TextView
          android:id="@+id/restaurant_info_avg_rating"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:textStyle="bold"
          android:textSize="20sp"
          android:textColor="#FFFFFF"
          android:textAlignment="gravity"
          android:layout_gravity="center"
          android:background="@drawable/rounded_rating_background"/>

      <TextView
          android:id="@+id/restaurant_info_description"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:padding="@dimen/holo_gap"
          android:gravity="center"
          android:layout_gravity="center"
          style="?android:textAppearanceLarge"
          android:fontFamily="sans-serif-light"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/holo_gap">

      <ca.mymenuapp.ui.widgets.SquaredImageView
          android:id="@+id/restaurant_info_map"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"/>

      <TextView
          android:id="@+id/restaurant_info_address"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="bottom"
          android:gravity="bottom"
          android:paddingLeft="6dp"
          android:paddingRight="6dp"
          android:singleLine="true"
          android:ellipsize="end"
          android:textColor="@color/white"
          android:fontFamily="sans-serif-light"
          android:background="@drawable/gradient_overlay"/>
    </FrameLayout>

    <TextView
        android:id="@+id/restaurant_info_hours"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/holo_gap"
        android:singleLine="true"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/restaurant_info_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/holo_gap"
        android:singleLine="true"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:ellipsize="end"/>

  </LinearLayout>

</ScrollView>