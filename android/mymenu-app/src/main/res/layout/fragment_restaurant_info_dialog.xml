<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingTop="@dimen/holo_gap"
      android:orientation="vertical"
      android:paddingLeft="@dimen/activity_horizontal_margin"
      android:paddingRight="@dimen/activity_horizontal_margin">

    <TextView
        android:id="@+id/restaurant_info_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/holo_gap"
        style="?android:textAppearanceLarge"
        android:fontFamily="sans-serif-light"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="@dimen/holo_gap">

      <ca.mymenuapp.ui.widgets.SquaredImageView
          android:id="@+id/restaurant_info_map"
          android:layout_width="256dp"
          android:layout_height="256dp"/>

      <TextView
          android:id="@+id/restaurant_info_address"
          android:layout_width="match_parent"
          android:layout_height="48dp"
          android:layout_gravity="bottom"
          android:gravity="bottom"
          android:padding="6dp"
          android:singleLine="true"
          android:ellipsize="end"
          android:textColor="@color/white"
          android:fontFamily="sans-serif-light"
          android:background="@drawable/gradient_overlay"/>
    </FrameLayout>

    <TextView
        android:id="@+id/restaurant_info_hours"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"/>

  </LinearLayout>

</ScrollView>